<?xml version="1.0"?>
<ruleset name="Moodle Plugin CI"
         xmlns="http://pmd.sf.net/ruleset/1.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0 http://pmd.sf.net/ruleset_xml_schema.xsd"
         xsi:noNamespaceSchemaLocation="http://pmd.sf.net/ruleset_xml_schema.xsd">
    <description>Moodle Plugin CI Ruleset</description>

    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/amd/build/*</exclude-pattern>

    <!-- Include standard rules -->
    <rule ref="rulesets/codesize.xml">
        <exclude name="ExcessiveMethodLength" />
    </rule>
    
    <!-- Re-add ExcessiveMethodLength but exclude specific files -->
    <rule ref="rulesets/codesize.xml/ExcessiveMethodLength">
        <properties>
            <property name="ignore-pattern" value="edit_form.php" />
        </properties>
    </rule>

    <rule ref="rulesets/unusedcode.xml">
        <exclude name="UnusedFormalParameter" />
    </rule>

    <rule ref="rulesets/unusedcode.xml/UnusedFormalParameter">
        <!-- Moodle often requires implementing interfaces with unused parameters -->
    </rule>

    <rule ref="rulesets/design.xml" />
    <rule ref="rulesets/naming.xml" />
</ruleset>
